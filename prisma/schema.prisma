// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Role {
  index String @unique
  User  User[]
}

model User {
  id         Int    @id @default(autoincrement())
  telegramId String @unique

  activeRole Role   @relation(fields: [roleIndex], references: [index])
  roleIndex  String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  email     String  @unique
  age       Int
  name      String
  about     String?
  lastName  String?
  avatarUrl String?

  rating Float @default(0)
  rate   Int?

  responses Respone[]

  specializations Specialization[]
  categories      Categorie[]
  reviewsList     Review[]
  Orders          Order[]          @relation("orders")
  executedOrders  Order[]          @relation("executedOrders")
}

model Respone {
  id Int @id @default(autoincrement())

  User   User? @relation(fields: [userId], references: [id])
  userId Int?

  Order   Order? @relation(fields: [orderId], references: [id])
  orderId Int?
}

model Order {
  id    Int    @id @default(autoincrement())
  title String

  // inSearch - atWork - inArchive - completed 
  status String @default("inSearch")

  description String
  price       Int

  author   User @relation(name: "orders", fields: [authorId], references: [id])
  authorId Int
  authorIsCloseOrder Boolean? @default(false)

  executor   User? @relation(name: "executedOrders", fields: [executorId], references: [id])
  executorId Int?
  executorIsCloseOrder Boolean? @default(false)


  responses        Respone[]
  categories      Categorie[]
  specializations Specialization[]
} 

model Specialization {
  id    Int    @id @default(autoincrement())
  label String

  Order Order[]

  User User[]
}

model Review {
  id Int @id @default(autoincrement())

  User   User? @relation(fields: [userId], references: [id])
  userId Int?
}

model Categorie {
  id   Int    @id @default(autoincrement())
  name String @unique

  User  User[]
  Order Order[]
}
